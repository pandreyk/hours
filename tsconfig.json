{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noEmitOnError": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "assets/*": ["./assets/*"],
      "generic/*": ["./shared/generic/*"],
      "containers/*": ["./shared/containers/*"],
      "layouts/*": ["./shared/layouts/*"],
      "formikFields/*": ["./shared/formikFields/*"],
      "config/*": ["./config/*"],
      "contexts/*": ["./contexts/*"],
      "helpers/*": ["./helpers/*"],
      "hooks/*": ["./hooks/*"],
      "i18n/*": ["./i18n/*"],
      "icons/*": ["./icons/*"],
      "libs/*": ["./libs/*"],
      "pages/*": ["./pages/*"],
      "styles/*": ["./styles/*"],
      "services/*": ["./services/*"],
      "modules/*": ["./modules/*"],
      "types/*": ["./types/*"],
      "mocks/*": ["./mocks/*"],
    }
  },
  "include": ["src"]
}
